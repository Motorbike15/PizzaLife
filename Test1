-- Server-Side giveItems function (in your GitHub script)
local function giveItems(player)
    local items = {"Remington 870", "M9", "Keycard", "AK47"}
    local backpack = player.Backpack

    for _, itemName in ipairs(items) do
        local foundTool = nil
        -- Search specifically for tools
        for _, obj in ipairs(game:GetDescendants()) do
            if obj:IsA("Tool") and obj.Name == itemName then
                foundTool = obj
                break
            end
        end

        if foundTool then
            local clonedTool = foundTool:Clone()
            clonedTool.Parent = backpack
            print("Given tool:", itemName, "to", player.Name) -- Debug print
        else
            print("Tool not found:", itemName) -- Debug print
        end
    end
end
