local Player = game.Players.LocalPlayer
local PlayerName = Player.Name
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("Ri Hub By Rismo", "BloodTheme")
local Main = Window:NewTab("Main")
local Scripts = Window:NewTab("Scripts")
local PlayerSection = Main:NewSection("Player")
local GunSection = Main:NewSection("Guns")
local TeamSection = Main:NewSection("Team")
local AdminSection = Scripts:NewSection("Admin Scripts")
local UsefulSection = Scripts:NewSection("Useful Scripts")

-- Player Section
PlayerSection:NewSlider("Walkspeed", "Changes your walkspeed.", 200, 16, function(s)
    if Player.Character and Player.Character:FindFirstChild("Humanoid") then
        Player.Character.Humanoid.WalkSpeed = s
    end
end)

PlayerSection:NewSlider("Jump Power", "Changes your Jumppower.", 200, 50, function(s)
    if Player.Character and Player.Character:FindFirstChild("Humanoid") then
        Player.Character.Humanoid.JumpPower = s
    end
end)

-- Guns Section
local function giveItem(itemName, itemPath)
    if itemPath then
        local args = {[1] = itemPath.ITEMPICKUP}
        workspace.Remote.ItemHandler:InvokeServer(unpack(args))
    else
        warn("Item path not found for:", itemName)
    end
end

GunSection:NewButton("Get Shotgun", "Get the Remington 870 Weapon in your inventory.", function()
    giveItem("Remington 870", workspace.Prison_ITEMS.giver:FindFirstChild("Remington 870"))
end)

GunSection:NewButton("Get Pistol", "Get the M9 Weapon in your inventory.", function()
    giveItem("M9", workspace.Prison_ITEMS.giver.M9)
end)

GunSection:NewButton("Get AK-47", "Get the Ak-47 Weapon in your inventory.", function()
    giveItem("AK-47", workspace.Prison_ITEMS.giver:FindFirstChild("AK-47"))
end)

GunSection:NewButton("Get M4A1", "You need the Riot Police gamepass.", function()
    giveItem("M4A1", workspace.Prison_ITEMS.giver.M4A1)
end)

GunSection:NewDropdown("Gun Mod", "Makes the gun really overpowered.", {"M9", "Remington 870", "AK-47", "Taser"}, function(v)
    local module = Player.Backpack:FindFirstChild(v) and require(Player.Backpack[v].GunStates) or Player.Character:FindFirstChild(v) and require(Player.Character[v].GunStates)
    if module then
        for _, prop in ipairs({"MaxAmmo", "CurrentAmmo", "StoredAmmo", "Range", "Bullets", "ReloadTime"}) do
            module[prop] = math.huge
        end
        module["FireRate"] = 0.000001
        module["Spread"] = 0
        module["AutoFire"] = true
    end
end)

GunSection:NewButton("Aimbot", "Nice universal aimbot.", function()
    loadstring(game:HttpGet("https://pastebin.com/raw/w2S8YyDt", true))()
end)

-- Team Section
local function switchTeam(teamColor)
    workspace.Remote.TeamEvent:FireServer(teamColor)
    workspace.Remote.loadchar:InvokeServer(PlayerName)
end

TeamSection:NewButton("Switch to Inmate", "Switch to the inmate team.", function()
    switchTeam("Bright orange")
end)

TeamSection:NewButton("Switch to Guards", "Switch to the guards team.", function()
    switchTeam("Bright blue")
end)

TeamSection:NewButton("Switch to Neutral", "Switch to the Neutral team.", function()
    workspace.Remote.loadchar:InvokeServer(Player)
    switchTeam("Medium stone grey")
end)

-- Scripts
AdminSection:NewButton("Inf Yield", "Nice FE admin script.", function()
    loadstring(game:HttpGet('https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source'))()
end)

AdminSection:NewButton("Fates Admin", "One of the best FE admin scripts.", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/fatesc/fates-admin/main/main.lua"))()
end)

UsefulSection:NewButton("DarkDex", "Allows you to see everything in the game.", function()
    loadstring(game:HttpGet("https://gist.githubusercontent.com/DinosaurXxX/b757fe011e7e600c0873f967fe427dc2/raw/ee5324771f017073fc30e640323ac2a9b3bfc550/dark%2520dex%2520v4"))()
end)

UsefulSection:NewButton("SimpleSpy", "A musthave for making roblox exploits.", function()
    loadstring(game:HttpGet("https://github.com/exxtremestuffs/SimpleSpySource/raw/master/SimpleSpy.lua"))()
end)

-- Mobile Compatibility (Kavo UI Library handles this mostly)

-- No direct changes are needed for this code to work on mobile, as the Kavo UI library is designed to be mobile-friendly.
-- However, it is always recommended to test on a mobile device or emulator to ensure that the UI is responsive and user-friendly.

-- Additional Tips for Mobile Compatibility:

-- 1. Testing: Regularly test your UI on actual mobile devices or emulators.
-- 2. UI Scaling: Ensure the UI elements scale correctly on different screen sizes. The Kavo UI Library handles this, but it is always good to check.
-- 3. Touch Input: Test touch input to ensure that buttons and sliders are responsive.
-- 4. Performance: Keep your code optimized for mobile devices, as they may have limited processing power.
-- 5. Screen Orientation: Test your UI in both portrait and landscape orientations.
-- 6. Gestures: If your game uses custom gestures, ensure they work correctly on mobile devices.
